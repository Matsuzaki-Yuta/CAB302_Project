<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane fx:controller="com.app.studysnap.controllers.DashboardController"
            stylesheets="@styles/dashboard.css"
            xmlns:fx="http://javafx.com/fxml">

    <!-- Sidebar -->
    <left>
        <!-- Use a BorderPane so Logout can be fixed at bottom -->
        <BorderPane styleClass="sidebar">
            <top>
                <VBox spacing="10" alignment="TOP_CENTER">
                    <Label text="ðŸŽ“ StudySnap" styleClass="sidebar-title"/>

                    <Button text="Home"     styleClass="sidebar-btn" onAction="#handleNav" userData="home.fxml"/>
                    <Button text="Profile"  styleClass="sidebar-btn" onAction="#handleNav" userData="profile.fxml"/>
                    <Button text="Quiz Gen" styleClass="sidebar-btn" onAction="#handleNav" userData="QuizGen.fxml"/>
                    <Button text="Study Groups" styleClass="sidebar-btn" onAction="#handleNav" userData="StudyGroups.fxml"/>
                </VBox>
            </top>

            <!-- Fixed-bottom Logout -->
            <bottom>
                <VBox alignment="BOTTOM_CENTER" spacing="10" styleClass="sidebar">
                    <Button text="Logout" styleClass="sidebar-btn" onAction="#handleLogout"/>
                </VBox>
            </bottom>
        </BorderPane>
    </left>

    <!-- Main content target -->
    <center>
        <StackPane fx:id="contentArea" styleClass="main-content">
            <Label text="Main Content Area" styleClass="placeholder"/>
        </StackPane>
    </center>

</BorderPane>